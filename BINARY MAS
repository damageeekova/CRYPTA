        int phi (int n) {
            int result = n;
            for (int i=2; i*i<=n; i++)
                if (n % i == 0) {
                    while (n % i == 0)
                        n /= i;
                    result -= result / i;
                }
            if (n > 1)
                result -= result / n;
            return result;
        }

        long long int step (long long int a, int k,int n) {
                 int temp = a % n;
                    for (int i = 1; i < k; i++)
                        a = (a * temp) % n ;
                    return a;
             }

        long long int extended_euclid(int b, long long int a){
        int y;
        int e = b;
        int n = a;
        if ((a + 1) % b == 0)
            y = (a + 1) / b;
        else {
            int x;
            int q, r, x1, x2, y1, y2;
            x2 = 1;
            x1 = 0;
            y2 = 0;
            y1 = 1;
            while (b != 0){
                q = a / b;
                r = a - q * b;
                x = x2 - q * x1;
                y = y2 - q * y1;
                a = b;
                b = r;
                x2 = x1;
                x1 = x;
                y2 = y1;
                y1 = y;
            }
            y = y2;
        }
        if (y < 0)
            y = n + y;
        return y;
    }

        int charToBinary(char* val, int* ff){
        int binary = 0;
        int j = 0;
        int c;
        for(int i=0 ; val[i]!='\0' ; i++ ){
              c = val[i];
              for(int power = 7 ; power + 1 ; power-- )
                  if( c >= (1 << power) ){
                      c -= (1 << power);
                     ff[j] = 1;
                     j++;
                  }
                  else{
                    ff[j] = 0;
                    j++;
                  }
       }
       return j;
    }

        
